# EditorConfig for MineWright project
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.gradle]
indent_size = 4

[*.{java,groovy}]
indent_size = 4
continuation_indent_size = 4

[*.{json,yml,yaml,toml}]
indent_size = 2

[*.{md,markdown}]
max_line_length = off
trim_trailing_whitespace = false

[*.bat]
end_of_line = crlf

[Makefile]
indent_style = tab
